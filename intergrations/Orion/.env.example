# Farm 5.0 Agent System - Environment Configuration
# Copy this file to .env and update with your actual values

# ===== REQUIRED API KEYS =====
# OpenAI API Key (Required for all AI functionality)
OPENAI_API_KEY=sk-your-openai-key-here

# ===== DATABASE CONFIGURATION =====
# For development (SQLite)
DATABASE_URL=sqlite:///data/farm5_agents.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/farm5_agents

# For cloud (Supabase)
# DATABASE_URL=postgresql://username:password@your-project.supabase.co:5432/postgres

# ===== EMAIL CONFIGURATION =====
# Gmail API Credentials
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# Email Settings
DEFAULT_FROM_EMAIL=agents@yourcompany.com
DEFAULT_FROM_NAME=Farm 5.0 Agent System

# ===== SYSTEM CONFIGURATION =====
# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Agent Configuration
AGENT_TASK_TIMEOUT=300
DAILY_EMAIL_LIMIT=50
MAX_CONCURRENT_TASKS=5

# ===== MONITORING & ALERTS =====
# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Alerts (Optional)
ALERT_EMAIL=alerts@yourcompany.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===== EXTERNAL SERVICES =====
# Search APIs (Optional)
GOOGLE_SEARCH_API_KEY=your-google-search-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# LinkedIn API (Optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Apollo.io API (Optional)
APOLLO_API_KEY=your-apollo-api-key

# ===== DEPLOYMENT CONFIGURATION =====
# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ===== FEATURE FLAGS =====
# Enable/disable features
ENABLE_EMAIL_AGENT=true
ENABLE_SALES_AGENT=true
ENABLE_RESEARCH_AGENT=false
ENABLE_SUPPORT_AGENT=false
ENABLE_FINANCE_AGENT=false
ENABLE_ANALYTICS_AGENT=false
ENABLE_STRATEGY_AGENT=false

# ===== DEVELOPMENT SETTINGS =====
# Only for development
RELOAD=true
WORKERS=1