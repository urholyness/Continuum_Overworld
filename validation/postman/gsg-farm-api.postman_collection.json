{
  "info": { "name": "GSG Farm API", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    { "name": "Summary",
      "request": { "method": "GET", "url": "{{API_BASE}}/farms/2BH/summary" },
      "event": [{ "listen": "test", "script": { "exec": [
        "pm.test('last_ndvi present', ()=> pm.response.json().last_ndvi);",
        "pm.test('freshness present', ()=> pm.response.json().freshness);"
      ]}}]
    },
    { "name": "Readings",
      "request": { "method": "GET", "url": "{{API_BASE}}/farms/2BH/readings?since={{SINCE}}" },
      "event": [{ "listen": "test", "script": { "exec": [
        "pm.test('has rows', ()=> pm.response.json().length > 0);"
      ]}}]
    }
  ]
}

